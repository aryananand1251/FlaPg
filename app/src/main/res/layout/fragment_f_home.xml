<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".f_home">
    


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="48dp"

            android:src="@drawable/hostel">

        </ImageView>
       <androidx.cardview.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           app:cardCornerRadius="15dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:elevation="15dp"
           tools:ignore="MissingClass">


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="300dp"
            android:layout_height="48dp"
            app:queryHint="Search.."
            app:searchHintIcon="@null"
            app:iconifiedByDefault="false"
            android:focusable="false">


        </androidx.appcompat.widget.SearchView>
       </androidx.cardview.widget.CardView>

        <!-- <androidx.cardview.widget.CardView
             android:layout_width="280dp"
             android:layout_height="43dp"
             app:cardCornerRadius="20dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal">

                 <ImageView
                     android:id="@+id/search"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_marginLeft="5dp"
                     android:layout_marginTop="5dp"
                     android:src="@drawable/ic_action_name">

                 </ImageView>

                 <EditText
                     android:id="@+id/Edit_Search"
                     android:layout_width="250dp"
                     android:layout_height="wrap_content"
                     android:hint="Find PG or Hostel"
                     android:inputType="textMultiLine"></EditText>

             </LinearLayout>

         </androidx.cardview.widget.CardView>
 -->
        <ImageView
            android:id="@+id/notification"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/baseline_notifications_24">

        </ImageView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#3BD58A"
        android:elevation="8dp"
        tools:ignore="MissingClass">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome"

                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp">

                </TextView>

                <TextView
                    android:id="@+id/Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aryan Anand"
                    android:textSize="30sp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/location_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_my_location_24"
                android:layout_marginBottom="20dp">

            </ImageView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Searching For"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"

        android:layout_marginTop="5dp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#ffff"
            android:elevation="8dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/near_me"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/destinations">

            </ImageView>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#ffff"
            android:elevation="8dp"
            tools:ignore="MissingClass">

            <ImageView
                android:id="@+id/near_college"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/college">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#ffff"
            android:elevation="8dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/near_office"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/office">

            </ImageView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#ffff"
            android:elevation="8dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/near_hotels"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/hotels">

            </ImageView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Near me"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Near your college"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Near your office"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearest Hotels"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">

        </TextView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_property"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"

        android:layout_marginTop="5dp"
        android:textStyle="bold">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/List_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:elevation="8dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView

                    android:layout_marginTop="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/property"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="30dp">

                </ImageView>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/privateproperty"
                    android:layout_marginLeft="30dp">

                </ImageView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:layout_marginBottom="30dp"
                android:text="@string/l_p"
                android:layout_marginLeft="40dp"
                android:textSize="20sp">

            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>





</LinearLayout>